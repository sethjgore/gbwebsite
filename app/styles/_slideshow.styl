.slideshow_container
  position: fixed

.slideshow_box
  height: 90vh
  width: 100%
  position: absolute
  bottom: 0
  left: 0
  z-index: 80

.slideshow_boxes
  width: 100%
  height: 90vh
  overflow: hidden
  justify-content: center
  -webkit-justify-content: center

.slideshow_logo
  z-index: 100
  width: 15vmin
  position: relative
  +below(450px)
    margin-top: 25vmin
    width: 25vmin

.slideshow_logo-box
  width: 100%
  height: 10vw
  justify-content: center
  -webkit-justify-content: center


.slideshow_model-box
  display: block
  position: absolute
  bottom: 0
  left: 0
  right: 0
  width: 100%
  background: none
  +below(500px)
    background: hsla(0,0,100,.8);
    height: 8rem

.slideshow_model-name
  position: absolute
  bottom: 7vmin
  left: 4vmin
  font-size: 3vmin
  +below(500px)
    font-size: 1rem
    top: .8rem
    width: 100%
    text-align: center
    left: 0


.slideshow_model-place
  position: absolute
  bottom: 4vmin
  left: 4vmin
  font-size: 2vmin
  +below(500px)
    font-size: .75rem
    top: 2rem
    width: 100%
    text-align: center
    left: 0

