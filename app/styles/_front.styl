$mobile = 500px

.fr_logo-box
  +below($mobile)
    padding: 0
.fr_logo-image
  width: 60vmin

.fr_date
  color: hsla(0, 0%, 0%, 0.23)
  font-size: 3.5vmin
  padding-top: .5vmin
  font-family: 'ITC Blair W01 Light';

  +below($mobile)
    font-size: 5vmin
    padding-top: .5vmin

.fr_tagline-box
  display: inherit
  +below($mobile)
    flex: 0
    padding-top: 20vmin

.fr_tagline-text
  font-size: 4vmin
  margin: 0
  color: hsla(0, 0%, 0%, 0.23)
  align-self: center;
  padding: 2vmin 0
  +below($mobile)
    padding: 4vmin 0
    font-size: 4.5vmin


.fr_filler-box
  height: 62vmin
  //background: url('teaser_light.jpg') no-repeat center center; background-size: cover;
  +below($mobile)
    height: 62vmin;
.fr_background
  +below($mobile)
    background-position: 49% center !important
    background-size: 187% !important

.fr_sm-box
  text-align: center;
  justify-content: space-around;
  -webkit-justify-content: space-around;
  padding-top: 2vmin;

.sm-icon
  height: 3vmin
  width: 8vmin
  background-size: contain !important
  background: gray
  border-radius: 12vmin
  +below($mobile)
    height: 5vmin
    width: 10vmin

  &.facebook
    background: url('facebook.svg') center center no-repeat;

  &.instagram
    background: url('instagram.svg') center center no-repeat;
  &.twitter
    background: url('twitter.svg') center center no-repeat;

  &.signup
    background: url('email.svg') center center no-repeat;

.fr_sm-share
    font-size: 4vmin
    text-align: center
